from tkinter import *

window = Tk()
window.geometry('500x500')


e= Entry(window, relief = RAISED, width = 30)
e.place(x = 50, y=50)

def click(num):
    result = e.get()
    e.delete(0,END)
    e.insert(0,str(result)+str(num))

def add():
    n1=e.get()
    global i
    i = float(n1)
    global math
    math = 'addition'
    e.delete(0,END )

def sub():
    n1=e.get()
    global i
    i = float(n1)
    global math
    math = 'subtraction'
    e.delete(0,END )

def mult():
    n1=e.get()
    global i
    i = float(n1)
    global math
    math = 'multiplication'
    e.delete(0,END )

def div():
    n1=e.get()
    global i
    i = float(n1)
    global math
    math = 'division'
    e.delete(0,END )

def ent():
    n2 = e.get()
    e.delete(0, END)

    if math == 'addition':
        e.insert(0, i + float(n2))
    elif math =="subtraction":
        e.insert(0, i - float(n2))
    elif math == 'multiplication':
        e.insert(0, i *float(n2))
    elif math == 'division':
        e.insert(0, i / float(n2))


def clr():
    e.delete(0,END)


